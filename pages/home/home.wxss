@import "./home.skeleton.wxss";
.swiper{
  height: 390rpx;
}
.swiper-item>image{
  width: 100%;
  height: 100%;
}

.recommend{
  display: flex;
  padding: 15rpx 0 20rpx;
  text-align: center;
  font-size: 14px;
  border-bottom: 8px solid #eee;
}
.recommend-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.recommend-item image{
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 10rpx;
}

.feature>image{
  width: 100%;
}

.tab-control{
  display: flex;
  text-align: center;
  position: sticky;
  position: -webkit-sticky;
  top: 0px;
  background-color: #fff;
  z-index: 999;
}
/* .tab-top{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
} */
.f-tab-top{
  position: static;
}
.tab-control-item{
  flex: 1;
  line-height: 40px;
}
.tab-control-item text{
  padding: 6px;
}
.active text{
  color: #ff5777;
}
