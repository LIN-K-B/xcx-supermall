@import '/assets/iconfont/iconfont.wxss';

.profile{
  background-color: rgb(250, 250, 250);
  height: 100vh;
  padding-bottom:30px;
}
.profile-userinfo{
  width: 100%;
  height: 220px;
  background-color: #ff8198;
}
.profile-userinfo-box{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: bold;
  transform: translateY(50px);
}
.profile-userinfo-box>view{
  margin: 5px 0;
}
.userinfo-image{
  height: 80px;
  width: 80px;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 0 3px #ccc;
  overflow: hidden;
}
.userinfo-image image{
  width: 100%;
  height: 100%;
}
.userinfo-title{
  padding: 0 15px;
}
.profile-list-top{
  display: flex;
  text-align: center;
  height: 100px;
  background-color: #fff;
}
.profile-list-top .profile-list-top-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.iconfont{
  color: #ff8198;
}
.profile-list-top-item .iconfont{
  font-size: 28px;
}
.profile-list-content,
.profile-list-bottom{
  background-color: #fff;
  width: 96vw;
  margin: 20rpx auto;
  border-radius: 15px;
}
.profile-list-content-item,
.profile-list-bottom-item{
  padding: 25rpx 5px;
  font-size: 20px;
}
.profile-list-content-item .iconfont,
.profile-list-bottom-item .iconfont{
  font-size: 25px;
  padding: 0 10px;
}