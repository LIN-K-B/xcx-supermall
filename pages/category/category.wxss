.category-nav{
  display: flex;
  background-color: rgb(255, 255, 255);
  z-index: 999;
  height: 40px;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.nav-active{
  color: #ff8198;
  line-height: 45px;
}
.category-nav-item{
  flex: 1;
  text-align: center;
}

.category{
  background-color: #f8f8f8;
  padding-top: 48px;
}
.category-box{
  display: flex;
}
.scoll-category-left{
  width: 120px;
  height: 100vh;
}
.scoll-category-right,
.scoll-category-bottom{
  height: 100vh;
}
.scoll-category-top{
  height: 50px;
  width: 100vw;
  position: fixed;
  top: 40px;
  background-color: #fff;
  z-index: 999;
}