@import '/assets/iconfont/iconfont.wxss';
.goods{
  column-count:2;
  column-gap:5px;
}
.goods-item{
  break-inside: avoid;/*列里面的项不折断*/
  background-color: rgb(255, 255, 255);
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 5px;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, .1);
  margin: 0 5px;
  margin-bottom: 15px;

}
.goods-item image{
  width: 100%;
  border-radius: 5px;
}
.goods-info{
  font-size: 12px;
  text-align: center;
}
.goods-title{
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-price{
  color: #ff5777;
  padding: 0 20px;
}
.iconfont{
  color: #ff5777;
  font-size: 18px;
  font-weight: bold;
}