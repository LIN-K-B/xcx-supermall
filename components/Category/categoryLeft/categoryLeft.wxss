.category-box-item{
  line-height: 50px;
  text-align: center;
  font-size: 14px;
  padding: 0 5px;
}
.category-box-top{
  display: flex;
}
.category-box-top>.category-box-item{
  flex-shrink: 0;
  width:80px;
}
.active {
  background-color: #fff;
  border-radius: 8px 0  0 8px;
  position: relative;
}
.category-box-top .active::after{
  content: '';
  width: 70px;
  height: 2px;
  background-color:rgb(248, 64, 110);
  position: absolute;
  left: 50%;
  /* bottom: 0; */
  transform: translate(-50%);
  border-radius: 10px;
}
.category-box-left .active::before{
  content: '';
  width: 3px;
  height: 30px;
  background-color: #ee4362;
  position: absolute;
  left: 0px;
  top: 50%;
  transform: translateY(-50%);
  border-radius: 18px;
}