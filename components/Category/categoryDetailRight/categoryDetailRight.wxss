@import '/assets/iconfont/iconfont.wxss';

.categoryDetail{
  padding: 100px 0 20px 0;
  position: relative;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  background-color: #000000;
}
.categoryDetail-box{
  background-color: #fff;
  overflow: hidden;
  border-radius: 18px;
  width: 94%;
  margin: 20px auto;
}
.categoryDetail-box>image{
  width: 100%;
  height: 620rpx;
}
.categoryDetail-price{
  color: rgb(255, 0, 106);
  display: flex;
  align-items: center;
}
.categoryDetail-price>text{
 flex: 1;
 padding: 0 15px;
}
.categoryDetail-price .price{
  font-size: 26px;
  font-weight: 400;
}
.categoryDetail-price .sale{
  color: #777;
  text-align: right;
  font-size: 13px;
}
.categoryDetail-title{
  color: #222;
  font-weight: 700;
  text-indent: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 5px 0;
}
.categoryDetail-props{
  padding: 5px;
  display: flex;
  flex-wrap: wrap;
  color: #666;
  font-size: 13px;
}
.categoryDetail-props .categoryDetail-props-text{
  flex-shrink: 0;
  margin: 0 4px;
  position:relative
}
.categoryDetail-props .categoryDetail-props-text:nth-child(n+2)::before{
  content: '';
  width: 2px;
  height: 12px;
  background-color: #888;
  position: absolute;
  left: -4px;
  top: 50%;
  transform: translateY(-50%);
}
.categoryDetail-shopSeller{
  height: 30px;
  background-color: rgb(248, 64, 110);
  color: #fff;
  display: flex;
  justify-content: center;
}
.categoryDetail-shopSeller .iconfont{
  font-size: 25px;
  color: #fff;
}
.categoryDetail-shopSeller-title{
  font-size: 14px;
  line-height: 30px;
}